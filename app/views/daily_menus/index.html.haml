.ui.container
  = render 'layouts/welcome' unless current_user
  .ui.vertical.segment
    .ui.five.column.grid
      - @facade.paginated_daily_menus.reverse.each do |menu|
        .column 
          .ui.fluid.link.card 
            .content 
              .header
                = menu.created_at_day
              .description
                = menu.formatted_created_at
                %br/
                %br/
            = menu.active_unactive_menu_link
      .one.column.row
        .celled.center.aligned.column
          = paginate @facade.paginated_daily_menus
          