%h1.ui.center.aligned.header Your order
.ui.piled.segment
  %table.ui.very.basic.celled.table
    %thead
      %tr
        %th Order items
        %th Price
    %tbody
      - @facade.user_order_items&.each do |item|
        %tr
          %td
            %h4.ui.header
              = item.name
              .sub.header
                = item.humanized_course
          %td
            = item.price
    %tfoot 
      %tr 
        %th.right.aligned Total price
        %th
          = @facade.user_order_cost
  - if @facade.daily_menu.created_at.today?
    .ui.two.buttons
      = link_to "Edit", edit_daily_menu_order_path(@facade.daily_menu, @facade.user_order), 
                                                                      class: "ui primary mini button"
      = link_to "Cancel my order", daily_menu_order_path(@facade.daily_menu, @facade.user_order), 
                                                      method: :delete,   
                                                      class: "ui mini button",
                                                      data: { confirm_swal: 'Are you sure?' }