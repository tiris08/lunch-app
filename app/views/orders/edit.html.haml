.ui.container
  .ui.two.column.grid
    .column
      %h1.ui.center.aligned.header Edit your order here:
      = simple_form_for @order, url: daily_menu_order_path, html: {class: "ui form"} do |f|
        = f.hidden_field :user_id, value: current_user.id
        = f.hidden_field :daily_menu_id, value: params[:daily_menu_id]
        .ui.piled.segment
          = render 'errors' if @order.errors.any?
          .ui.three.column.grid
            = f.simple_fields_for :order_items do |item|
              = render 'order_item_fields', f: item
            .column.ui.vertical.segment
              = link_to_add_association f, :order_items, class: 'ui primary labaled button nest' do
                %i.icon.plus 
                Add item
          %br/            
          .ui.fluid.buttons
            = f.submit "Confirm", class: "ui primary button",  data: { confirm: "Are you sure you?" }
            .or
            = link_to "Back", :back, class: "ui button"
    .column 
      = render 'shared/menu_list', menu: DailyMenu.find(params[:daily_menu_id])
      