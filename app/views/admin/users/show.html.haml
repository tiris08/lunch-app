.ui.container
  .ui.one.column.grid
    .column
      %h1.ui.center.aligned.header 
        = "All orders of #{@user.name} (#{@user.email})"
      %table.ui.very.basic.celled.table
        %thead
          %tr 
            %th Order date 
            %th Menu items
            %th Price
          %tbody
            - @user_order_items.each do |item|
              %tr
                - if item.course == "first_course"
                  %td
                    = item.created_at.strftime("%d %b %Y")
                - else
                  %td 
                %td
                  = item.name
                  = " - (#{item.course.gsub("_", " ").capitalize})"
                %td 
                  = item.price
