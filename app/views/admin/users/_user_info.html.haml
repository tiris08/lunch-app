%h1.ui.center.aligned.header User info
.ui.segment
  %table.ui.very.basic.large.table
    %tbody
      %tr 
        %td Name:
        %td
          = user.name
      %tr
        %td Email:
        %td
          = user.email
      %tr 
        %td Joined in 
        %td 
          = user.joined_in_date
      %tr 
        %td Total amount of orders:
        %td 
          = @facade.user_total_orders
      %tr 
        %td Total spent:
        %td  
          = @facade.user_total_spending
