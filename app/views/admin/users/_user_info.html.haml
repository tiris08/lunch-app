%h1.ui.center.aligned.header User info
.ui.segment
  %table.ui.very.basic.large.table
    %tbody
      %tr 
        %td Name:
        %td
          = @user.name
      %tr
        %td Email:
        %td
          = @user.email
      %tr 
        %td Joined in 
        %td 
          = @user.created_at.strftime("%d %b %Y")
      %tr 
        %td Total amount of orders:
        %td 
          = @show_facade.user_total_orders
      %tr 
        %td Total spent:
        %td  
          = number_to_currency(@show_facade.user_total_spending)
