%h1.ui.center.aligned.header
  Users Orders
.ui.piled.segment
  %table.ui.very.basic.table
    %thead
      %tr 
        %th.center.aligned User name 
        %th Menu items
        %th Total cost
      %tbody
        - @daily_menu.orders.each do |order|
          %tr
            %td.selectable.center.aligned
              = link_to "#{order.user.name}", admin_user_path(order.user)
            %td 
              - order.food_items.each_with_index do |item, index| 
                = index == order.food_items.size - 1 ? "#{item.name}." : "#{item.name}," 
            %td  
              = order.food_items.pluck(:price).sum
              