.ui.container
  .ui.vertical.segment 
    = link_to "sdf", new_admin_daily_menu_path
  .ui.vertical.segment
    .ui.five.column.grid
      - @daily_menus.reverse.each do |menu|
        .column 
          .ui.fluid.link.card 
            .content 
              .header
                = menu.created_at.strftime("%A")
              .description
                = menu.created_at.strftime("%d %b %Y")
                %br/
                %br/
            = link_to 'History', menu, class: "ui bottom attached button" 
      .one.column.row
        .center.aligned.column
          = paginate @daily_menus