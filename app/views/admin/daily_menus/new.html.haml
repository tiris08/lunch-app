.ui.container
  .ui.form
    %h2.header Create a manu for today
    = simple_form_for([:admin, @daily_menu]) do |f|
      = f.simple_fields_for :food_items do |item|
        = render 'food_items_fields', item: item
      = f.submit 'Create', class: 'ui blue button'
      = link_to "Back", :back, class: 'ui button'
      