.ui.segment
  %table.ui.very.basic.table
    %thead
      %tr 
        %th Order date 
        %th Menu items 
        %th Total cost
      %tbody
        - orders.each do |order|
          %tr
            %td
              - if current_user.is_admin?
                = link_to order.formatted_created_at, admin_daily_menu_path(order.daily_menu)
              - else
                = link_to order.formatted_created_at, order_path(order)
            %td 
              = order.food_items_humanized
            %td  
              = order.cost
    .one.column.row
      .celled.center.aligned.column